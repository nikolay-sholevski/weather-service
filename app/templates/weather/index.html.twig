<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Weather demo</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: system-ui, sans-serif;

            /* Soft blue sky background with subtle clouds */
            background: #cde8ff;
            background-image: url("data:image/svg+xml,%3Csvg width='100%' height='100%' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.45'%3E%3Ccircle cx='200' cy='140' r='80'/%3E%3Ccircle cx='260' cy='160' r='60'/%3E%3Ccircle cx='150' cy='180' r='50'/%3E%3C/g%3E%3C/svg%3E");
            background-repeat: repeat;
        }

        .weather-wrapper {
            max-width: 480px;
            margin: 40px auto;
            text-align: center;
        }

        .weather-form input[type="text"] {
            padding: 7px 10px;
            width: 200px;
            border-radius: 6px;
            border: 1px solid #999;
        }

        .weather-form button {
            padding: 7px 16px;
            border-radius: 6px;
            border: none;
            background: #0069d9;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }

        .weather-form button:hover {
            background: #0053b3;
        }

        .weather-card {
            display: none;
            margin-top: 25px;
            padding: 25px;
            border-radius: 20px;

            background: linear-gradient(145deg, #f0f7ff, #d9e9f7);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);

            animation: fadeIn 0.3s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(15px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .weather-emoji {
            font-size: 4.2rem;
            margin-bottom: 10px;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0% { transform: translateY(0); }
            50% { transform: translateY(-6px); }
            100% { transform: translateY(0); }
        }

        .temperature {
            font-size: 2.4rem;
            font-weight: 600;
            margin-bottom: 18px;
        }

        .weather-meta {
            font-size: 1rem;
            text-align: left;
            margin: 0 auto;
            max-width: 260px;
        }

        .error {
            color: #b00020;
            margin-top: 10px;
        }
    </style>
</head>
<body>

<div class="weather-wrapper">
    <h1>Weather demo</h1>

    <form id="weather-form" class="weather-form">
        <label for="city">City:</label>
        <input type="text" id="city" value="Plovdiv">
        <button type="submit">Get weather</button>
    </form>

    <div id="error" class="error"></div>

    <div id="weather-card" class="weather-card">
        <div id="trend-emoji" class="weather-emoji"></div>
        <div id="temperature" class="temperature"></div>

        <div class="weather-meta">
            <div><strong>City:</strong> <span id="meta-city"></span></div>
            <div><strong>Temperature:</strong> <span id="meta-temp"></span> °C</div>
        </div>
    </div>
</div>

<script>
    // Map backend trend sign -> emoji via Unicode
    function emojiForTrend(sign) {
        switch (sign) {
            case '+': return '\u{1F975}'; // hot
            case '-': return '\u{1F976}'; // cold
            default:  return '\u{1F610}'; // neutral
        }
    }

    // Format temperature with a + sign for positive values
    function formatTemp(value) {
        if (value > 0) return "+" + value;
        return value; // 0 or negative already fine
    }

    document.getElementById('weather-form').addEventListener('submit', async function (e) {
        e.preventDefault();

        const city = document.getElementById('city').value.trim();
        const errorEl = document.getElementById('error');
        const card = document.getElementById('weather-card');

        errorEl.textContent = "";
        card.style.display = "none";

        if (!city) {
            errorEl.textContent = "Please enter a city.";
            return;
        }

        try {
            const response = await fetch(`/weather/${encodeURIComponent(city)}`);

            if (!response.ok) {
                throw new Error(response.status);
            }

            const data = await response.json();

            const trendSign = data.trend ?? '=';
            const emoji = emojiForTrend(trendSign);
            const temp = formatTemp(Number(data.temperature));
            
            document.getElementById('trend-emoji').textContent = emoji;
            document.getElementById('temperature').textContent = `${temp} °C`;

            document.getElementById('meta-city').textContent = data.city;
            document.getElementById('meta-temp').textContent = data.temperature;

            card.style.display = "block";

        } catch (err) {
            errorEl.textContent = "Failed to load weather data.";
        }
    });
</script>

</body>
</html>

